---
import "../styles/global.css";

const {
  title = "Rachit Lohani â€” CTO, Tech Executive & Thought Leader",
  description = "Official site of Rachit Lohani, CTO and technology executive. Leadership, experience, insights, and media.",
  canonical = undefined,
  noindex = false,
  personSchema = null
} = Astro.props;

const site = "https://rachitlohani.com";
const url = new URL(Astro.url.pathname, site).toString();
const canonicalUrl = canonical ?? url;

const jsonLd =
  personSchema ??
  ({
    "@context": "https://schema.org",
    "@type": "Person",
    name: "Rachit Lohani",
    jobTitle: "Technology Executive and Advisor",
    url: site,
    sameAs: [
      "https://www.linkedin.com/in/rachitlohani/",
      "https://www.youtube.com/@RachitLohani",
      "https://medium.com/@rlohani"
    ],
    worksFor: {
      "@type": "Organization",
      name: "Rachit Lohani"
    }
  });

const webSiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: "Rachit Lohani",
  url: site
};

const webPageSchema = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  name: title,
  url: canonicalUrl,
  description
};
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {noindex ? <meta name="robots" content="noindex, nofollow" /> : null}
    <script type="application/ld+json">{JSON.stringify([jsonLd, webSiteSchema, webPageSchema])}</script>
  </head>
  <body>
    <slot />
  </body>
</html>
