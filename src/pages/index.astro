---
import BaseLayout from "../layouts/BaseLayout.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";

const title = "Rachit Lohani – Tech Executive, Product Leader & Advisor";
const description =
  "Official site of Rachit Lohani – technology executive, product leader, speaker, and advisor. Insights on leadership, strategy, and scalable systems.";

const personSchema = {
  "@context": "http://schema.org",
  "@type": "Person",
  name: "Rachit Lohani",
  url: "https://rachitlohani.com",
  sameAs: [
    "https://www.linkedin.com/in/rachitlohani",
    "https://www.youtube.com/@RachitLohani",
    "https://medium.com/@rlohani"
  ],
  jobTitle: "Technology Executive and Advisor",
  worksFor: {
    "@type": "Organization",
    name: "Rachit Lohani"
  }
};
---
<BaseLayout title={title} description={description} personSchema={personSchema}>
  <div class="page">
    <Nav />

    <main>
      <section class="hero">
        <div>
          <p class="eyebrow">Product · Operator · Thinker</p>
          <h1>Rachit Lohani – Technology Executive & Thought Leader</h1>
          <p class="lead">
            Rachit Lohani is a technology executive focused on translating business intent into
            scalable systems, shipping decisive products, and mentoring leaders.
          </p>
          <div class="cta-row">
            <a class="button" href="/contact">Work with me</a>
            <a class="button ghost" href="/about">Read my story</a>
          </div>
        </div>
        <div class="hero-card">
          <p class="label">Current focus</p>
          <ul>
            <li>AI SDLC and Org structure</li>
            <li>Platform strategy & modernization</li>
            <li>Product engineering leadership</li>
            <li>Operational excellence at scale</li>
          </ul>
        </div>
      </section>

      <section class="grid">
        <div class="panel">
          <h2>Operator</h2>
          <p>
            I build calm, repeatable execution in complex environments—aligning architecture,
            roadmap, and culture so teams deliver with confidence.
          </p>
        </div>
        <div class="panel">
          <h2>Leader</h2>
          <p>
            I coach VPs and SVPs, partner closely with the CEO and board, and align with the CRO,
            COO, CFO, and CHRO to build a culture of accountability and delivery.
          </p>
        </div>
        <div class="panel">
          <h2>Writer</h2>
          <p>
            My insights cover systems thinking, executive decision‑making, and the craft of
            building enduring technology organizations.
          </p>
        </div>
      </section>

      <section class="quote">
        <h2>About Rachit Lohani</h2>
        <p>
          Rachit Lohani is a CTO and technology executive known for building resilient platforms,
          scaling product delivery, and developing leaders who operate with clarity and intent.
          His work spans platform strategy, operational excellence, and executive alignment.
        </p>
        <a class="text-link" href="/about">Read the full bio of Rachit Lohani</a>
      </section>

      <section class="grid">
        <div class="panel">
          <h2>Rachit Lohani Bio & Career</h2>
          <p>
            Experience across technology leadership roles, guiding multi‑disciplinary teams and
            high‑growth organizations through transformation.
          </p>
          <a class="text-link" href="/about">Explore career milestones</a>
        </div>
        <div class="panel">
          <h2>Rachit Lohani Leadership Insights</h2>
          <p>
            Executive perspectives on product strategy, platform delivery, and organizational
            design—grounded in real‑world operating experience.
          </p>
          <a class="text-link" href="/insights">Read Rachit Lohani insights</a>
        </div>
        <div class="panel">
          <h2>Rachit Lohani Interviews & Media</h2>
          <p>
            Conversations, interviews, and talks covering leadership, technology strategy, and
            building durable systems.
          </p>
          <a class="text-link" href="/media">Watch interviews and media</a>
        </div>
      </section>

      <section class="callout">
        <div>
          <h2>Personal notes</h2>
          <p>
            Beyond the day‑to‑day, I write about leadership lessons, decision‑making, and the human
            side of building technology organizations.
          </p>
        </div>
        <a class="button" href="/personal">Read more</a>
      </section>
    </main>

    <Footer />
  </div>
</BaseLayout>
